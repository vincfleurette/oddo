# Configuration de l'API Oddo
ODDO_BASE_URI=https://your-oddo-api-url.com/api/

# Sécurité JWT
JWT_SECRET=your-super-secret-jwt-key-here-minimum-32-characters
JWT_TTL=3600

# Configuration du cache
CACHE_ENABLED=true
CACHE_TTL=3600

# Configuration du stockage
# Options: file, redis, database
STORAGE_DRIVER=file
STORAGE_PATH=./storage
STORAGE_PREFIX=oddo_

# Configuration Redis (si STORAGE_DRIVER=redis)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Configuration base de données (si STORAGE_DRIVER=database)
DATABASE_DSN=mysql:host=127.0.0.1;port=3306;dbname=oddo
DATABASE_USERNAME=your_db_user
DATABASE_PASSWORD=your_db_password

# Configuration de l'application
APP_ENV=development
APP_DEBUG=true